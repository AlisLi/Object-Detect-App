        <RelativeLayout
            style="@style/RelativeInnerMain"
            android:background="@drawable/button_drawable"
            android:foreground="@drawable/ripple_foreground"
            android:id="@+id/rel_net_video"
            android:onClick="toNetVideo">

            <TextView
