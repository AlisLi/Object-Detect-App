            <ImageView
                style="@style/ImageEndInnerMain"
                android:src="@mipmap/wifi"/>

        </RelativeLayout>

        <RelativeLayout
            style="@style/RelativeInnerMain"
            android:background="@drawable/button_drawable"
            android:foreground="@drawable/ripple_foreground"
            android:id="@+id/rel_net_photo"
            android:onClick="toNetPhoto">

            <TextView
                style="@style/TextMidInnerMain"
                android:text="@string/txt_btn_net_photo"/>

            <ImageView
                style="@style/ImageEndInnerMain"
